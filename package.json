{
    "author": "JoshuaBrest <36625023+JoshuaBrest@users.noreply.github.com>",
    "dependencies": {
        "@hono/node-server": "^1.15.0",
        "drizzle-orm": "^0.41.0",
        "hono": "^4.8.4",
        "jose": "^6.0.11",
        "pg": "^8.16.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-router": "^7.6.3",
        "rollup": "^4.44.2",
        "zod": "^3.25.76"
    },
    "description": "Instructure Canvas LMS TRMNL plugin.",
    "devDependencies": {
        "@biomejs/biome": "^2.0.6",
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-replace": "^6.0.2",
        "@rollup/plugin-swc": "^0.4.0",
        "@rollup/plugin-terser": "^0.4.4",
        "@swc/core": "^1.12.11",
        "@tailwindcss/postcss": "^4.1.11",
        "@types/pg": "^8.15.4",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "concurrently": "^9.2.0",
        "drizzle-kit": "^0.30.6",
        "postcss": "^8.5.6",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-postcss": "^4.0.2",
        "tailwindcss": "^4.1.11",
        "typescript": "^5.8.3"
    },
    "keywords": [
        "canvas",
        "lms",
        "trmnl"
    ],
    "license": "ISC",
    "main": "dist/index.cjs",
    "name": "canvas-trmnl",
    "packageManager": "pnpm@10.6.5",
    "pnpm": {
        "onlyBuiltDependencies": [
            "@biomejs/biome",
            "@swc/core",
            "@tailwindcss/oxide",
            "esbuild"
        ]
    },
    "scripts": {
        "build": "rollup -c --environment NODE_ENV:production",
        "check": "biome check --write",
        "dev": "concurrently \"pnpm run watch\" \"node --env-file .env --watch ./dist/index.cjs\"",
        "drizzle:generate": "drizzle-kit generate",
        "drizzle:migrate": "drizzle-kit migrate",
        "drizzle:up": "drizzle-kit up",
        "start": "node .",
        "typecheck": "tsc --noEmit",
        "watch": "rollup -c --watch"
    },
    "type": "module",
    "version": "1.0.0"
}
